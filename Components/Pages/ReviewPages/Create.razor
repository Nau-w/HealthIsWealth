@page "/reviews/create"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Write a Review</PageTitle>

<div class="bookings-container">

    <div class="bookings-header">
        <h1>Write a Review</h1>
        <p>Share your experience for Booking #@BookingId</p>
    </div>

    <div class="booking-card" style="display: block; max-width: 600px; margin: 0 auto;">
        <EditForm method="post" Model="Review" OnValidSubmit="AddReview" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger mb-3" role="alert" />

            <input type="hidden" name="Review.BookingId" value="@Review.BookingId" />
            <input type="hidden" name="Review.UserId" value="@Review.UserId" />

            <div class="mb-4 text-center">
                <label class="form-label d-block fw-bold" style="color: white; text-shadow: 0 1px 2px rgba(0,0,0,0.3);">How would you rate it?</label>

                <div style="display: flex; justify-content: center; gap: 10px; font-size: 2.5rem; cursor: pointer;">
                    @for (int i = 1; i <= 5; i++)
                    {
                        var starValue = i;
                        // Gold if active, transparent white if inactive
                        var colorStyle = Review.Rating >= starValue ? "color: #ffd700;" : "color: rgba(255,255,255,0.3);";

                        <span @onclick="() => SetRating(starValue)"
                              style="@colorStyle transition: color 0.2s; text-shadow: 0 2px 5px rgba(0,0,0,0.2);">
                            ★
                        </span>
                    }
                </div>

                <InputNumber @bind-Value="Review.Rating" class="d-none" />
                <ValidationMessage For="() => Review.Rating" class="text-danger" style="margin-top: 5px; display: block;" />
            </div>

            <div class="mb-4">
                <label for="feedback" class="form-label fw-bold" style="color: white;">Your Feedback</label>
                <InputTextArea id="feedback" @bind-Value="Review.Feedback" class="form-control" rows="5"
                               placeholder="Tell us what you liked or what could be improved..."
                               style="background: rgba(255,255,255,0.9); border: none; padding: 15px;" />
                <ValidationMessage For="() => Review.Feedback" class="text-danger" />
            </div>

            <div class="card-actions" style="justify-content: center; gap: 15px; margin-top: 20px;">
                <a href="@($"/reviews/{BookingId}")" class="btn-action btn-reschedule" style="text-align: center;">Cancel</a>
                <button type="submit" class="btn-action btn-details" style="border: none;">Submit Review</button>
            </div>

        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    public int BookingId { get; set; }

    [SupplyParameterFromForm]
    private Review Review { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        if (Review.BookingId == 0)
        {
            Review.BookingId = BookingId;
        }

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity is not null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                Review.UserId = userId;
            }
        }
    }

    private void SetRating(int rating)
    {
        Review.Rating = rating;
    }

    private async Task AddReview()
    {
        using var context = DbFactory.CreateDbContext();
        context.Review.Add(Review);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo($"/reviews/{Review.BookingId}");
    }
}