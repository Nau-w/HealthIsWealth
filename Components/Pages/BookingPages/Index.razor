@page "/bookings"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using HealthIsWealth.Domain
@using HealthIsWealth.Data
@implements IAsyncDisposable
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]
@rendermode InteractiveServer


<PageTitle>HealthIsWealth | My Bookings</PageTitle>



<div class="bookings-container">
    <div class="bookings-header">
        <h1>My Bookings</h1>
        <p>Manage your sessions</p>
        @if (upcomingBookings.Any())
        {
            <span class="booking-count">@upcomingBookings.Count Upcoming</span>
        }
        else
        {
            <span class="booking-count">Currently no bookings</span>
        }
    </div>


    @if (isLoading)
    {
        <div class="status-message">
            <p>Loading your schedule...</p>
        </div>
    }
    else if (!upcomingBookings.Any())
    {
        <div class="status-message">
            <h3>No upcoming bookings</h3>
            <p>Ready to get moving? Find a facility and book a slot!</p>
            <a href="/Venues" class="btn-cta">Browse For Sports</a>
        </div>
    }
    else
    {
            @foreach (var booking in upcomingBookings)
            {
                <div class="booking-card">

                    <div class="card-details">
                        <h4>Venue Name: @booking.Timeslot.Facility.Venue.Name</h4>
                        <p class="location-text">Facility Name: @booking.Timeslot.Facility.Name</p>
                        <p class="location-text">@booking.Timeslot.Facility.Location</p>
                        <small class="address-text">
                            @booking.Timeslot.Facility.Venue.Address
                            @booking.Timeslot.Facility.Venue.PostalCode
                        </small>
                    </div>

                    <div class="card-status">
                        <span class="status-badge">Confirmed</span>
                        <span class="booking-id">#@booking.BookingId</span>
                    </div>

                    <div class="card-time">
                        <div class="date-box">
                            <span class="day">@booking.Timeslot.StartDT.ToString("dd")</span>
                            <span class="month">@booking.Timeslot.StartDT.ToString("MMM")</span>
                        </div>
                        <span class="time-range">
                            @booking.Timeslot.StartDT.ToString("HH:mm") - @booking.Timeslot.EndDT.ToString("HH:mm")
                        </span>
                        <span class="duration">
                            @((booking.Timeslot.EndDT - booking.Timeslot.StartDT).TotalHours)h
                        </span>
                    </div>

                    <div class="card-actions">
                        <a href="@($"/bookings/details?bookingid={booking.BookingId}")" class="btn-action btn-details">More Details</a> 
                    </div>

                </div>
            }
    }
</div>

@code {
    private HealthIsWealthContext dbContext = default!;
    private List<Booking> upcomingBookings = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        dbContext = DbFactory.CreateDbContext();
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(u => u.Type.Contains("nameidentifier"))?.Value;

            if (userId != null)
            {
                var allMyBookings = await dbContext.Booking
                    .Include(b => b.Timeslot)
                        .ThenInclude(t => t.Facility)
                            .ThenInclude(f => f.Venue)
                    .Where(b => b.UserId == userId)
                    .OrderBy(b => b.Timeslot.StartDT)
                    .ToListAsync();

                upcomingBookings = allMyBookings
                    .Where(b => b.Timeslot.StartDT > DateTime.Now)
                    .ToList();
            }
        }
        isLoading = false;
    }

    public async ValueTask DisposeAsync() => await dbContext.DisposeAsync();
}   