@page "/bookings/delete"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Cancel Booking</PageTitle>

<div class="full-screen-bg"></div>

<div class="review-container">

    <div class="review-header-card" style="background: linear-gradient(135deg, #ff416c, #ff4b2b);">
        <div class="review-header-content">
            <h1>Cancel Booking 🗑️</h1>
            <p>Are you sure you want to cancel?</p>
        </div>
    </div>

    @if (booking is null)
    {
        <p class="text-center text-white"><em>Loading...</em></p>
    }
    else
    {
        <div class="review-card border-danger">
            <div class="alert alert-warning text-center">
                This action cannot be undone. You will lose your slot.
            </div>

            <div class="text-center my-4">
                <h3 class="text-dark">@booking.Timeslot?.Facility?.Name</h3>
                <p class="fs-5">
                    @booking.Timeslot?.StartDT.ToString("dd MMM yyyy") <br />
                    <span class="text-muted">@booking.Timeslot?.StartDT.ToString("h:mm tt") - @booking.Timeslot?.EndDT.ToString("h:mm tt")</span>
                </p>
            </div>

            <EditForm method="post" Model="booking" OnValidSubmit="DeleteBooking" FormName="delete" Enhance>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/bookings" class="btn btn-outline-secondary">Keep Booking</a>
                    <button type="submit" class="btn btn-danger px-4" disabled="@(booking is null)">Confirm Cancellation</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private Booking? booking;

    [SupplyParameterFromQuery]
    private int BookingId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        // Include data so we can show what we are deleting
        booking = await context.Booking
            .Include(b => b.Timeslot).ThenInclude(t => t.Facility)
            .FirstOrDefaultAsync(m => m.BookingId == BookingId);

        if (booking is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBooking()
    {
        using var context = DbFactory.CreateDbContext();
        context.Booking.Remove(booking!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/bookings");
    }
}