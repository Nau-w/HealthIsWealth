@page "/Account/profile"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>HealthIsWealth | Profile</PageTitle>

<div class="profile-layout">
    <div class="profile-card header-card">

        <div class="card-banner"></div>

        <div class="avatar-section">
            <div class="avatar-wrapper">
                @if (!string.IsNullOrEmpty(previewImage))
                {
                    <img src="@previewImage" class="profile-avatar" />
                    <span class="preview-badge">Preview</span>
                }
                else if (!string.IsNullOrEmpty(image))
                {
                    <img src="@image" class="profile-avatar" />
                }
                else
                {
                    <div class="profile-avatar placeholder-avatar"></div>
                }

                <button class="camera-btn" @onclick="EditPhoto">
                    📷
                </button>
            </div>
        </div>

        @if (isEditingPhoto)
        {
            <div class="photo-edit-controls">
                <InputFile OnChange="HandleFileSelected" class="form-control-sm" accept=".jpg,.jpeg,.png" />
                @if (!string.IsNullOrEmpty(photoErrorMessage))
                {
                    <p class="text-danger small">@photoErrorMessage</p>
                }
                <div class="mt-2">
                    <button class="btn btn-sm btn-success" @onclick="SavePhoto" disabled="@(selectedFile == null)">Save</button>
                    <button class="btn btn-sm btn-secondary" @onclick="CancelEditPhoto">Cancel</button>
                </div>
            </div>
        }

        <div class="user-summary">
            <h2>@(currentUser?.FirstName ?? "User") @(currentUser?.LastName ?? "")</h2>
            <p class="user-email">@currentUser?.Email</p>
            <div class="badges">
                <span class="badge badge-member">Member</span>
                <span class="badge badge-verified">Verified</span>
            </div>
        </div>
    </div>

    <div class="profile-card details-card">
        <div class="card-header-row">
            <h3>Personal Information</h3>
            <h4 class="privacy-link">Edit</h4>
        </div>

        <div class="info-row">
            @if (isEditingName)
            {
                <div class="edit-mode-inline">
                    <label>First Name</label>
                    <input @bind="newFirstName" class="form-control" />
                    <label>Last Name</label>
                    <input @bind="newLastName" class="form-control" />
                    @if (!string.IsNullOrEmpty(nameErrorMessage))
                    {
                        <p class="text-danger">@nameErrorMessage</p>
                    }
                    <div class="btn-row">
                        <button class="btn btn-sm btn-success" @onclick="SaveName">Save</button>
                        <button class="btn btn-sm btn-secondary" @onclick="CancelEditName">Cancel</button>
                    </div>
                </div>
            }
            else
            {
                <div class="view-mode-inline">
                    <div>
                        <span class="label-text">FULL NAME</span>
                        <div class="value-text">
                            @if (string.IsNullOrEmpty(currentUser?.FirstName))
                            {
                                <span class="text-muted">Not Set</span>
                            }
                            else
                            {

                                @currentUser.FirstName@currentUser.LastName
                            }
                        </div>
                    </div>
                    <button class="edit-icon" @onclick="EditName">✎</button>
                </div>
            }
        </div>

        <div class="info-row">
            @if (isEditingPhone)
            {
                <div class="edit-mode-inline">
                    <label>Phone</label>
                    <input @bind="newPhoneNumber" class="form-control" />
                    @if (!string.IsNullOrEmpty(phoneErrorMessage))
                    {
                        <p class="text-danger">@phoneErrorMessage</p>
                    }
                    <div class="btn-row">
                        <button class="btn btn-sm btn-success" @onclick="SavePhone">Save</button>
                        <button class="btn btn-sm btn-secondary" @onclick="CancelEditPhone">Cancel</button>
                    </div>
                </div>
            }
            else
            {
                <div class="view-mode-inline">
                    <div>
                        <span class="label-text">PHONE NUMBER</span>
                        <div class="value-text">
                            @if (string.IsNullOrEmpty(currentUser?.PhoneNumber))
                            {
                                <span class="text-muted">Not Set</span>
                            }
                            else
                            {

                                @currentUser.PhoneNumber
                            }
                        </div>
                    </div>
                    <button class="edit-icon" @onclick="EditPhone">✎</button>
                </div>
            }
        </div>

        <div class="info-row">
            @if (isEditingEmail)
            {
                <div class="edit-mode-inline">
                    <label>Email</label>
                    <input @bind="newEmail" class="form-control" />
                    @if (!string.IsNullOrEmpty(emailErrorMessage))
                    {
                        <p class="text-danger">@emailErrorMessage</p>
                    }
                    <div class="btn-row">
                        <button class="btn btn-sm btn-success" @onclick="SaveEmail">Save</button>
                        <button class="btn btn-sm btn-secondary" @onclick="CancelEditEmail">Cancel</button>
                    </div>
                </div>
            }
            else
            {
                <div class="view-mode-inline">
                    <div>
                        <span class="label-text">EMAIL ADDRESS</span>
                        <div class="value-text">
                            @if (string.IsNullOrEmpty(currentUser?.Email))
                            {
                                <span class="text-muted">Not Set</span>
                            }
                            else
                            {

                                @currentUser.Email
                            }
                        </div>
                    </div>
                    <button class="edit-icon" @onclick="EditEmail">✎</button>
                </div>
            }
        </div>

    </div>

    <h4 class="history-header">Past History</h4>
    @if (!pastBookings.Any())
    {
        <p class="text-muted">No booking history found.</p>
    }
    else
    {
        <div class="history-grid">
            @foreach (var booking in pastBookings)
            {
                <div class="booking-card">
                    <div>
                        <strong>@booking.Timeslot.Facility.Name</strong>
                        <div class="small text-muted">@booking.Timeslot.Facility.Location</div>
                    </div>
                    <div class="text-end">
                        <div class="booking-date">@booking.Timeslot.StartDT.ToString("dd MMM yyyy")</div>
                        <a href="/reviews/@booking.BookingId" class="btn btn-link btn-sm p-0">View Review</a>
                    </div>
                </div>
            }
        </div>
    }
</div>