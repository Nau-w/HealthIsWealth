@page "/Account/profile"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using HealthIsWealth.Data
@using HealthIsWealth.Domain
@using Microsoft.EntityFrameworkCore
@using System.IO

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<HealthIsWealthUser> UserManager
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject IWebHostEnvironment Environment
@attribute [Authorize]

@code {
    private string? image;

    private HealthIsWealthContext dbContext = default!;
    private HealthIsWealthUser? currentUser;

    private List<Booking> upcomingBookings = new();
    private List<Booking> pastBookings = new();

    private HealthIsWealthUser? myProfile;

    protected override async Task OnInitializedAsync()
    {
        dbContext = DbFactory.CreateDbContext();
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(u => u.Type.Contains("nameidentifier"))?.Value;
            currentUser = await UserManager.GetUserAsync(user);

            if (currentUser != null)
            {
                // Load existing profile picture if it exists
                if (!string.IsNullOrEmpty(currentUser.ProfilePictureUrl))
                {
                    image = currentUser.ProfilePictureUrl + $"?v={DateTime.Now.Ticks}";
                }

                var allBookings = await dbContext.Booking
                .Include(booking => booking.Timeslot)
                .ThenInclude(timeslot => timeslot.Facility)
                .ThenInclude(facility => facility.Venue)
                .Where(booking => booking.UserId == userId)
                .OrderBy(booking => booking.Timeslot.StartDT)
                .ToListAsync();

                var now = DateTime.Now;

                upcomingBookings = allBookings
                    .Where(b => b.Timeslot.StartDT > now)
                    .ToList();

                pastBookings = allBookings
                    .Where(b => b.Timeslot.StartDT <= now)
                    .OrderByDescending(b => b.Timeslot.StartDT)
                    .ToList();
            }
        }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        var photo = e.File;

        var resizePhoto = await photo.RequestImageFileAsync("image/jpeg", 400, 400);

        var fileName = $"{currentUser.Id}.png";

        var folderPath = Path.Combine(Environment.WebRootPath, "images", "ProfilePicture");
        var fullPath = Path.Combine(folderPath, fileName);

        await using (var stream = resizePhoto.OpenReadStream(maxAllowedSize: 1024 * 1024 * 5))
        await using (var fs = new FileStream(fullPath, FileMode.Create))
        {
            await stream.CopyToAsync(fs);
        }

        currentUser.ProfilePictureUrl = $"/images/ProfilePicture/{fileName}";

        await UserManager.UpdateAsync(currentUser);

        // 6. Update local variable to show the image immediately without refreshing
        // We add a timestamp (?v=...) to force the browser to ignore the old cached image
        image = currentUser.ProfilePictureUrl + $"?v={DateTime.Now.Ticks}";

        StateHasChanged();
    }
}

<PageTitle>HealthIsWealth | Profile</PageTitle>

<div class="name">
    <h3>Hello, @(currentUser?.FirstName + " " + currentUser?.LastName) !</h3>
</div>

<InputFile accept="image/*" OnChange="HandleImageUpload" />

@if (!string.IsNullOrEmpty(image))
{
    <div>
        <img src="@image" alt="Uploaded" style="max-width: 200px; margin-top: 20px;" />
    </div>
}


<h4 style="margin-top: 30px;">Past History</h4>
<hr />
@if (!pastBookings.Any())
{
    <p>No booking history found.</p>
}
else
{
    @foreach (var booking in pastBookings)
    {
        <div class="bookings-float">
            <strong>@booking.Timeslot.Facility.Name</strong> <br>
            @booking.Timeslot.Facility.Location <br>
            @booking.Timeslot.StartDT.ToString("dd/MM/yyyy") <br>
            <h3>Leave a review</h3>
            <a href="/reviews/@booking.BookingId">review</a>
        </div>
    }
}