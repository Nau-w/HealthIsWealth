@page "/bookings"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using HealthIsWealth.Domain
@using HealthIsWealth.Data

@implements IAsyncDisposable
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>My Bookings</PageTitle>

<h1>My Bookings</h1>

<p>
    <a href="bookings/create" class="btn btn-primary">Create New Booking</a>
</p>

@if (myBookings == null)
{
    <p><em>Loading your bookings...</em></p>
}
else if (!myBookings.Any())
{
    <p>You have no bookings yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sport / Facility</th>
                <th>Location</th>
                <th>Date & Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in myBookings)
            {
                <tr>
                    <td>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <span>@booking.Timeslot?.Facility?.Name</span>
                        </div>
                    </td>
                    <td>@booking.Timeslot?.Facility?.Location</td>
                    <td>
                        <div>@booking.Timeslot?.StartDT.ToString("dd MMM yyyy")</div>
                        <small class="text-muted">
                            @booking.Timeslot?.StartDT.ToString("hh:mm tt") - @booking.Timeslot?.EndDT.ToString("hh:mm tt")
                        </small>
                    </td>
                    <td>
                        <a href="@($"bookings/edit?bookingid={booking.BookingId}")">Edit</a> |
                        <a href="/facilities">View Details</a> |
                        <a href="@($"bookings/delete?bookingid={booking.BookingId}")">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private HealthIsWealthContext dbContext = default!;

    // Instead of IQueryable, we use a standard List
    private List<Booking>? myBookings;

    protected override async Task OnInitializedAsync()
    {
        dbContext = DbFactory.CreateDbContext();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(u => u.Type.Contains("nameidentifier"))?.Value;

            if (userId != null)
            {
                // EXECUTE THE QUERY IMMEDIATELY using .ToListAsync()
                myBookings = await dbContext.Booking
                    .Include(b => b.Timeslot)
                    .ThenInclude(t => t.Facility)
                    .Where(b => b.UserId == userId)
                    .OrderBy(b => b.Timeslot.StartDT) // Optional: Sort by date
                    .ToListAsync(); // <--- This fetches the data into memory
            }
        }
    }

    public async ValueTask DisposeAsync() => await dbContext.DisposeAsync();
}