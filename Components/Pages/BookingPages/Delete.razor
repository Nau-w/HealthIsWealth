@page "/bookings/delete"
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Cancel Booking</PageTitle>

<div class="bookings-container">

    <div class="bookings-header">
        <h1>Cancel Booking 🗑️</h1>
        <p>Are you sure you want to cancel?</p>
    </div>

    @if (booking is null)
    {
        <div style="text-align: center; color: white; margin-top: 50px;">
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="booking-card" style="display: block; text-align: center;">

            <div style="background: rgba(255, 0, 0, 0.1); border: 1px solid rgba(255,0,0,0.3); color: maroon; padding: 15px; border-radius: 10px; margin-bottom: 20px;">
                <strong>Warning:</strong> This action cannot be undone. You will lose your slot.
            </div>

            <div class="my-4">
                <h3 style="margin-bottom: 5px; color: #333;">@booking.Timeslot?.Facility?.Name</h3>
                <p style="font-size: 1.1rem; color: #555;">
                    @booking.Timeslot?.StartDT.ToString("dd MMM yyyy") <br />
                    <span style="font-weight: bold; color: #333;">
                        @booking.Timeslot?.StartDT.ToString("h:mm tt") - @booking.Timeslot?.EndDT.ToString("h:mm tt")
                    </span>
                </p>
            </div>

            <EditForm method="post" Model="booking" OnValidSubmit="DeleteBooking" FormName="delete" Enhance>
                <div class="card-actions" style="justify-content: center; gap: 15px;">

                    <a href="@($"/bookings/details?bookingid={BookingId}")" class="btn-action btn-details" style="max-width: 200px;">
                        Keep Booking
                    </a>

                    <button type="submit" class="btn-action btn-cancel" disabled="@(booking is null)" style="max-width: 200px; cursor: pointer;">
                        Confirm Cancellation
                    </button>

                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private Booking? booking;

    [SupplyParameterFromQuery]
    private int BookingId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        // Include data so we can show what we are deleting
        booking = await context.Booking
            .Include(b => b.Timeslot).ThenInclude(t => t.Facility)
            .FirstOrDefaultAsync(m => m.BookingId == BookingId);

        if (booking is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBooking()
    {
        using var context = DbFactory.CreateDbContext();
        context.Booking.Remove(booking!);
        await context.SaveChangesAsync();

        // After deletion, go back to the main list
        NavigationManager.NavigateTo("/bookings");
    }
}