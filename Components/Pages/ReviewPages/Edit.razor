@page "/reviews/edit"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Edit Review</PageTitle>

<div class="full-screen-bg"></div>

<div class="review-container">

    <div class="review-header-card">
        <div class="review-header-content">
            <h1>Edit Review ✏️</h1>
            <p>Update your feedback</p>
        </div>
    </div>

    @if (Review is null)
    {
        <p class="text-center text-white"><em>Loading...</em></p>
    }
    else
    {
        <div class="review-card">
            <EditForm method="post" Model="Review" OnValidSubmit="UpdateReview" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert" />

                <input type="hidden" name="Review.ReviewId" value="@Review.ReviewId" />
                <input type="hidden" name="Review.BookingId" value="@Review.BookingId" />
                <input type="hidden" name="Review.UserId" value="@Review.UserId" />

                <div class="mb-4 text-center">
                    <label class="form-label d-block fw-bold">Update Rating</label>
                    <div class="d-flex justify-content-center gap-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            var starValue = i;
                            <span class="star-rating-input @(Review.Rating >= starValue ? "filled" : "")"
                                  @onclick="() => SetRating(starValue)">
                                ★
                            </span>
                        }
                    </div>
                    <InputNumber @bind-Value="Review.Rating" class="d-none" />
                    <ValidationMessage For="() => Review.Rating" class="text-danger" />
                </div>

                <div class="mb-4">
                    <label for="feedback" class="form-label fw-bold">Feedback</label>
                    <InputTextArea id="feedback" @bind-Value="Review.Feedback" class="form-control" rows="4" />
                    <ValidationMessage For="() => Review.Feedback" class="text-danger" />
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@($"/reviews/{Review.BookingId}")" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    private int ReviewId { get; set; }

    [SupplyParameterFromForm]
    private Review? Review { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Review ??= await context.Review.FirstOrDefaultAsync(m => m.ReviewId == ReviewId);

        if (Review is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private void SetRating(int rating)
    {
        if (Review != null) Review.Rating = rating;
    }

    private async Task UpdateReview()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Review!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ReviewExists(Review!.ReviewId))
                NavigationManager.NavigateTo("notfound");
            else
                throw;
        }

        NavigationManager.NavigateTo($"/reviews/{Review.BookingId}");
    }

    private bool ReviewExists(int reviewid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.Review.Any(e => e.ReviewId == reviewid);
    }
}