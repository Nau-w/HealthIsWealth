@page "/venues/facility-booking/new-booking/{facilityId:int}"
@using HealthIsWealth.Data
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@using System.Security.Claims
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Find Timeslots</PageTitle>

<div class="container-centered">
    <div style="width: 80%">
        @if (facility is not null)
        {
            <h1 class="title-large" style="color: crimson">@facility.Venue.Name</h1>
            <h2 class="title-medium" style="color: crimson">@facility.Name</h2>
        }
        else
        {
            <p><em>loading...</em></p>
        }
        <hr />
        @if (dateInputModel is not null)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <h5 class="card-title mb-3">Search for available timeslots</h5>

                            <EditForm Model="@dateInputModel" OnValidSubmit="() => FindTimeslots(dateInputModel.timeslotDate, dateInputModel.hours)">
                                <DataAnnotationsValidator />
                                <ValidationSummary class="text-danger" />

                                <div class="mb-3">
                                    <label for="timeslotDate" class="form-label">Booking Date</label>
                                    <div class="input-group">
                                        <span class="input-group-text" id="date-addon">📅</span>
                                        <InputDate TValue="DateOnly"
                                                   id="timeslotDate"
                                                   class="form-control"
                                                   aria-describedby="date-addon"
                                                   @bind-Value="dateInputModel.timeslotDate"
                                                   min="@minDate.ToString("yyyy-MM-dd")"
                                                   max="@maxDate.ToString("yyyy-MM-dd")" />
                                    </div>
                                    <div class="form-text">Choose a date between @minDate.ToString("MMM d") and @maxDate.ToString("MMM d").</div>
                                    <ValidationMessage For="()=> dateInputModel.timeslotDate" />
                                </div>

                                <div class="mb-3">
                                    <label for="hours" class="form-label">Number of hours</label>
                                    <div class="input-group w-50">
                                        <span class="input-group-text">⏱</span>
                                        <InputNumber TValue="int"
                                                     id="hours"
                                                     class="form-control"
                                                     @bind-Value="dateInputModel.hours"
                                                     min="1"
                                                     max="4" />
                                    </div>
                                    <div class="form-text">Minimum 1 hour — maximum 4 hours.</div>
                                    <ValidationMessage For="()=> dateInputModel.hours" />
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-danger">Find Timeslots</button>
                                    <button type="button" class="btn btn-outline-secondary" @onclick="@(()=> NavigateToVenue())">Back to venue</button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0">
                        <div class="card-body">
                            @if (!timeslotsFound)
                            {
                                <div class="alert alert-warning" role="alert">
                                    No timeslots found for the selected date and duration. Try another date or shorter duration.
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Availability is shown after a search. Hours are available from <strong>7:00 AM</strong> to <strong>10:00 PM</strong>.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p><em>loading...</em></p>
        }
    </div>
</div>


@code {
    [Parameter]
    public int facilityId { get; set; }

    [SupplyParameterFromForm]
    private DateInputModel dateInputModel { get; set; }

    private bool timeslotsFound = true;

    private DateOnly minDate = DateOnly.FromDateTime(DateTime.Today.AddDays(1));
    private DateOnly maxDate = DateOnly.FromDateTime(DateTime.Today.AddDays(14));

    private Facility? facility;

    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        facility = await context.Facility.Include(f=>f.Venue).FirstOrDefaultAsync(f => f.FacilityId == facilityId);
        if (facility is null)
        {
            NavigationManager.NavigateTo("notfound");
        }

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        userId = user.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

        dateInputModel = new();
    }

    private sealed class DateInputModel
    {
        public DateOnly timeslotDate = DateOnly.FromDateTime(DateTime.Today.AddDays(1));
        public int hours = 1;
    }
    private void NavigateToVenue()
    {
        NavigationManager.NavigateTo($"/venues/details?venueid={facility.VenueId}");
    }

    private async Task FindTimeslots(DateOnly date, int hours)
    {
        using var context = DbFactory.CreateDbContext();
        IList
    <Timeslot> FilteredTimeslots = context.Timeslot.Where(t => t.FacilityId == facilityId &&
            DateOnly.FromDateTime(t.StartDT).Equals(date)).ToList();
        int count = 0;
        // 7AM TO 10PM
        for (int i=7; i<22; i++)
        {
            count += count!=hours? 1: 0;
            if (FilteredTimeslots.Any(t => t.StartDT.Hour <= i && i < t.EndDT.Hour))
            {
                count = 0; 
            }
            if (count == hours)
            {
                NavigationManager.NavigateTo(
                    $"/venues/facility-booking/new-booking/{facilityId}/timeslots?date={date.ToString("yyyy-MM-dd")}&hours={hours}");
                return;
            }
        }
        timeslotsFound = false;
        StateHasChanged();
        await Task.CompletedTask;
    }
}
