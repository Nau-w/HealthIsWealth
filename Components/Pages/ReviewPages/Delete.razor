@page "/reviews/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using HealthIsWealth.Domain
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Delete Review</PageTitle>

<div class="full-screen-bg"></div>

<div class="review-container">

    <div class="review-header-card" style="background: linear-gradient(135deg, #d32f2f, #ef5350);">
        <div class="review-header-content">
            <h1>Delete Review 🗑️</h1>
            <p>Are you sure you want to delete this?</p>
        </div>
    </div>

    @if (review is null)
    {
        <p class="text-center text-white"><em>Loading...</em></p>
    }
    else
    {
        <div class="review-card border-danger">
            <div class="alert alert-warning text-center">
                This action cannot be undone.
            </div>

            <h5 class="text-center mb-3">Review for Booking #@review.BookingId</h5>

            <div class="text-center mb-4">
                <span class="fs-2" style="color:#ffc107">
                    @RenderStars(review.Rating)
                </span>
            </div>

            <blockquote class="blockquote text-center bg-light p-3 rounded">
                <p class="mb-0">"@review.Feedback"</p>
            </blockquote>

            <EditForm method="post" Model="review" OnValidSubmit="DeleteReview" FormName="delete" Enhance>
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <a href="@($"/reviews/{review.BookingId}")" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4" disabled="@(review is null)">Confirm Delete</button>
                </div>
            </EditForm>
        </div>
    }
</div>

@code {
    private Review? review;

    [SupplyParameterFromQuery]
    private int ReviewId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        review = await context.Review.FirstOrDefaultAsync(m => m.ReviewId == ReviewId);

        if (review is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteReview()
    {
        using var context = DbFactory.CreateDbContext();
        context.Review.Remove(review!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo($"/reviews/{review.BookingId}");
    }

    private string RenderStars(double rating)
    {
        int r = (int)Math.Round(rating);
        return new string('★', r) + new string('☆', 5 - r);
    }
}