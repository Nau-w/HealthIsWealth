@page "/bookings/details"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using HealthIsWealth.Domain
@using HealthIsWealth.Data
@implements IAsyncDisposable
@inject IDbContextFactory<HealthIsWealth.Data.HealthIsWealthContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Booking Details</PageTitle>

<div class="bookings-container">

    <div class="bookings-header">
        <h1>Booking Ticket</h1>
        <p>Ref: #@BookingId</p>
    </div>

    @if (booking is null)
    {
        <div style="text-align: center; color: white; margin-top: 50px;">
            <p>Loading ticket...</p>
        </div>
    }
    else
    {
        <div class="booking-card">

            <div class="card-details">
                <h4>Facility Name: @booking.Timeslot.Facility.Name</h4>
                <small class="address-text">
                    @booking.Timeslot.Facility.Venue.Address
                    <br />
                    @booking.Timeslot.Facility.Venue.PostalCode
                </small>
            </div>

            <div class="card-status">
                <span class="status-badge">Confirmed</span>
            </div>

            <div class="card-time">
                <div class="date-box">
                    <span class="day">@booking.Timeslot.StartDT.ToString("dd")</span>
                    <span class="month">@booking.Timeslot.StartDT.ToString("MMM")</span>
                </div>
                <span class="time-range">
                    @booking.Timeslot.StartDT.ToString("HH:mm") - @booking.Timeslot.EndDT.ToString("HH:mm")
                </span>
                <span class="duration">
                    @((booking.Timeslot.EndDT - booking.Timeslot.StartDT).TotalHours)h
                </span>
            </div>

            <div class="card-actions">
                <a href="/bookings" class="btn-action btn-details">Back To Bookings</a>

                <a href="@($"/bookings/edit?bookingid={booking.BookingId}")" class="btn-action btn-reschedule">Reschedule / Edit</a>
                <a href="@($"/bookings/delete?bookingid={booking.BookingId}")" class="btn-action btn-cancel">Cancel Booking</a>
            </div>
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery]
    public int BookingId { get; set; }

    private HealthIsWealthContext dbContext = default!;
    private Booking? booking;

    protected override async Task OnInitializedAsync()
    {
        dbContext = DbFactory.CreateDbContext();

        // Fetch the specific booking with all related data
        booking = await dbContext.Booking
            .Include(b => b.Timeslot)
                .ThenInclude(t => t.Facility)
                    .ThenInclude(f => f.Venue)
            .FirstOrDefaultAsync(b => b.BookingId == BookingId);
    }

    public async ValueTask DisposeAsync() => await dbContext.DisposeAsync();
}